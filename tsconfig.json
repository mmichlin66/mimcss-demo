{
	"references": [
		{ "path": "../mimcss" },
		{ "path": "../mimbl" }
	],
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"experimentalDecorators": true,
		"preserveConstEnums": false,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "ES2017",
		"lib": [ "ES2017", "dom" ],
		"outDir": "./lib/",
		"jsx": "react",
		"jsxFactory": "mim.jsx",
		"baseUrl": "./",
		"paths": {
			"*": [ "node_modules/*", "*"]
		},
	},

	"include": [
		"./src/**/*"
	]
}